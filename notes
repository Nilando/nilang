fn create_user(params) {
  this = params;

  this.get_name = fn() {
    return this.name;
  }

  this.set_name = fn(name) {
    this.name = name;
  }

  this.say_name = fn() {
    print this.name;
  }
  
  this.is_confirmed = fn() {
    return this.name;
  }
}
